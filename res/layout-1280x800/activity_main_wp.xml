<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:adsmogo="http://www.adsmogo.com"
    android:id="@+id/mainLayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/main_bg1"
    android:baselineAligned="false"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ScrollView
                android:id="@+id/scrollView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:paddingLeft="20dp"
                android:paddingTop="30dp" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <LinearLayout
                            android:id="@+id/toggleButtonLayout"
                            android:layout_width="118dp"
                            android:layout_height="118dp"
                            android:background="#CCFF7F24" >

                            <ToggleButton
                                android:id="@+id/toggleButton"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:background="#00000000"
                                android:checked="true"
                                android:textColor="#FFFFFFFF"
                                android:textOff="弹窗关闭"
                                android:textOn="弹窗开启"
                                android:textSize="18sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="118dp"
                            android:layout_height="118dp"
                            android:layout_marginLeft="10dp"
                            android:background="#CCFF7F24" >

                            <Button
                                android:id="@+id/calendarSetButton"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:background="#00000000"
                                android:text="选择日历"
                                android:textColor="#FFFFFFFF" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal" >

                        <LinearLayout
                            android:layout_width="118dp"
                            android:layout_height="118dp"
                            android:background="#AA3399ff" >

                            <Button
                                android:id="@+id/button1"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:background="#00000000"
                                android:text="打开短信"
                                android:textColor="#FFFFFFFF" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="118dp"
                            android:layout_height="118dp"
                            android:layout_marginLeft="10dp"
                            android:background="#AA3399ff" >

                            <Button
                                android:id="@+id/button2"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:background="#00000000"
                                android:text="创建提醒"
                                android:textColor="#FFFFFFFF" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal" >

                        <LinearLayout
                            android:layout_width="118dp"
                            android:layout_height="118dp"
                            android:background="#AA3399ff" >

                            <Button
                                android:id="@+id/insertbutton"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:background="#00000000"
                                android:text="添加地点"
                                android:textColor="#FFFFFFFF" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="118dp"
                            android:layout_height="118dp"
                            android:layout_marginLeft="10dp"
                            android:background="#AA3399ff" >

                            <Button
                                android:id="@+id/cursorbutton"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:background="#00000000"
                                android:text="查看地点"
                                android:textColor="#FFFFFFFF" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal" >

                        <LinearLayout
                            android:layout_width="118dp"
                            android:layout_height="118dp"
                            android:background="#AA3399ff" >

                            <Button
                                android:id="@+id/backupbutton"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:background="#00000000"
                                android:text="备份地点"
                                android:textColor="#FFFFFFFF" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="118dp"
                            android:layout_height="118dp"
                            android:layout_marginLeft="10dp"
                            android:background="#AA3399ff" >

                            <Button
                                android:id="@+id/restorebutton"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:background="#00000000"
                                android:text="还原地点"
                                android:textColor="#FFFFFFFF" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </ScrollView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignBottom="@+id/linearLayout1"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/linearLayout1"
            android:layout_weight="1"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:paddingBottom="5dp" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:orientation="vertical" >

                    <ImageButton
                        android:id="@+id/download_btn"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:background="#00000000"
                        android:src="@drawable/icon_download_bg"
                        android:visibility="invisible" />

                    <ImageButton
                        android:id="@+id/download_btn"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_marginTop="20dp"
                        android:background="#00000000"
                        android:src="@drawable/icon_clear_bg"
                        android:visibility="invisible" />

                    <ImageButton
                        android:id="@+id/download_btn"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_marginTop="20dp"
                        android:background="#00000000"
                        android:src="@drawable/icon_add_bg"
                        android:visibility="invisible" />

                    <ImageButton
                        android:id="@+id/set_btn"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_marginTop="20dp"
                        android:background="#00000000"
                        android:src="@drawable/icon_set_bg" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <com.adsmogo.adview.AdsMogoLayout
            android:id="@+id/adsMogoView_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            adsmogo:appid="1c1e5e36250943d48c898a0aa311da62"
            adsmogo:express_mode="false" >
        </com.adsmogo.adview.AdsMogoLayout>
    </RelativeLayout>

</LinearLayout>