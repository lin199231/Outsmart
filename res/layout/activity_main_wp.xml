<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainLayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/main_bg1"

    android:baselineAligned="false"
    android:orientation="horizontal" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:paddingBottom="30dp"
        android:paddingLeft="20dp"
        android:paddingTop="30dp" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <LinearLayout
                    android:id="@+id/toggleButtonLayout"
                    android:layout_width="108dp"
                    android:layout_height="108dp"
                    android:background="#EEFF7F24" >

                    <ToggleButton
                        android:id="@+id/toggleButton"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:background="#00000000"
                        android:checked="true"
                        android:text="ToggleButton"
                        android:textColor="#FFFFFFFF"
                        android:textOff="弹窗提醒已关闭"
                        android:textOn="弹窗提醒已开启" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="108dp"
                    android:layout_height="108dp"
                    android:layout_marginLeft="5dp"
                    android:background="#EEFF7F24" >

                    <Button
                        android:id="@+id/calendarSetButton"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:background="#00000000"
                        android:text="选择日历"
                        android:textColor="#FFFFFFFF" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="108dp"
                    android:layout_height="108dp"
                    android:background="#CC3399ff" >

                    <Button
                        android:id="@+id/button1"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:background="#00000000"
                        android:text="打开收件箱"
                        android:textColor="#FFFFFFFF" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="108dp"
                    android:layout_height="108dp"
                    android:layout_marginLeft="5dp"
                    android:background="#CC3399ff" >

                    <Button
                        android:id="@+id/button2"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:background="#00000000"
                        android:text="创建自定义提醒"
                        android:textColor="#FFFFFFFF" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="108dp"
                    android:layout_height="108dp"
                    android:background="#CC3399ff" >

                    <Button
                        android:id="@+id/insertbutton"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:background="#00000000"
                        android:text="添加地点"
                        android:textColor="#FFFFFFFF" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="108dp"
                    android:layout_height="108dp"
                    android:layout_marginLeft="5dp"
                    android:background="#CC3399ff" >

                    <Button
                        android:id="@+id/cursorbutton"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:background="#00000000"
                        android:text="查看地点"
                        android:textColor="#FFFFFFFF" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="108dp"
                    android:layout_height="108dp"
                    android:background="#CC3399ff" >

                    <Button
                        android:id="@+id/backupbutton"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:background="#00000000"
                        android:text="备份地点"
                        android:textColor="#FFFFFFFF" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="108dp"
                    android:layout_height="108dp"
                    android:layout_marginLeft="5dp"
                    android:background="#CC3399ff" >

                    <Button
                        android:id="@+id/restorebutton"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:background="#00000000"
                        android:text="还原地点"
                        android:textColor="#FFFFFFFF" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="30dp"
        android:orientation="vertical" >

        <ImageButton
            android:id="@+id/set_btn"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:background="#00000000"
            android:src="@drawable/icon_set_bg" />
    </LinearLayout>

</LinearLayout>