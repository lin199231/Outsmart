    <PreferenceCategory android:title="@string/settings" >
        <Preference
            android:key="@string/choose_calendar"
            android:summary="@string/choose_calendar_summary"
            android:title="@string/choose_calendar" />
        <Preference
            android:key="@string/add_location"
            android:summary="@string/add_location_summary"
            android:title="@string/add_location" />
        <Preference
            android:key="@string/delete_location"
            android:summary="@string/delete_location_summary"
            android:title="@string/delete_location" />
