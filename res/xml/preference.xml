<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="@string/app_name" >

    <PreferenceCategory android:title="@string/new_reminder" >
        <Preference
            android:key="@string/show_last_SMS"
            android:summary="@string/show_last_SMS_summary"
            android:title="@string/show_last_SMS" />
        <Preference
            android:key="@string/show_SMS"
            android:summary="@string/show_SMS_summary"
            android:title="@string/show_SMS" />
        <Preference
            android:key="@string/edit_SMS"
            android:summary="@string/edit_SMS_summary"
            android:title="@string/edit_SMS" />
